{% extends 'base.twig' %}

{% block content %}
    <hr>
    <h2 class="intro-text text-center">
        Usuń komentarz
    </h2>
    <hr>
    <div>
        <h3>Czy na pewno chcesz usunąć ten komentarz?</h3>

        <form action="#" method="post">
            {{ form_widget(form) }}
            <input class="btn btn-danger" type="submit" name="submit" value="{{ 'Delete'|trans }}" />
            <a href="{{ url('/ads/') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
        </form>
    </div>

{% endblock %}