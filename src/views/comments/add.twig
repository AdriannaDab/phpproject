{# Add action template for Comments controller #}
{% extends 'base.twig' %}
{% block title %}{{  'Add comment'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h2 class="intro-text text-center">
        {{ 'Add comment'|trans }}
    </h2>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form role="form" action="" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.contence) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('/ads/' ) }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}
    </form>
    </div>
{% endblock %}