{# Edit action template for Ads controller #}
{% extends 'base.twig' %}
{% block title %}{{  'Edit ad'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h1  class="intro-text text-center">
        {{ 'Edit ad'|trans }}
    </h1>
    <hr>
<div class="col-md-3"></div>
<div class="col-md-6">
    <form role="form" action="{{ url ('ads_edit', {'id': id}  )  }}" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.ad_name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.ad_contence) }}
        </div>
        <div class="form-group">
            {{ form_row(form.idcategory) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('/ads/') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}
    </form>
</div>
{% endblock %}

