{% extends 'base.twig' %}

{% block title %}{{  'Delete ad'|trans }}{% endblock %}

{% block content %}
    <h1 class="text-center">
        {{ 'Delete ad'|trans }}
    </h1>
    <p>  {{ 'Do you really want to delete this'|trans }}?</p>
    <form action="{{ url('ads_delete', {'id' : ad.idad}) }}" method="post">
        {{ form_widget(form) }}
        <input class="btn btn-danger" type="submit" name="submit" value="{{ 'Delete'|trans }}" />
    </form>
{% endblock %}

