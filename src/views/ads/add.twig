{# Add action template for Ads controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Add ad'|trans }}{% endblock %}

{% block content %}
<div class="thumbnail">
    <h1 class="text-center">
        {{ 'Add ad'|trans }}
    </h1>

    <form  action="{{ url('ads_add') }}" method="post"   >
       {{ form_widget(form ) }}

        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('/ads/') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

    </form>

</div>
{% endblock %}

