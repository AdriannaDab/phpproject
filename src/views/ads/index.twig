{# Index action template for Ads controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Ads list'|trans }}{% endblock %}

{% block content %}
    <h1 class="text-center">
        {{ 'Ads list'|trans }}
    </h1>


    {%  if ads|length > 0 %}



        <table class="table table-condensed">
            <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Contence'|trans }}</th>
               {#<th>{{ 'Category'|trans }}</th>#}
                <th colspan="3">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for ad in ads %}
                <tr>
                    <td>{{ ad.idad|e }}</td>
                    <td>{{ ad.ad_name|e }}</td>
                    <td>{{ ad.ad_contence|e }}</td>
                    {#<td>{{ categories.name|e }}</td>#}
                    <td>
                        <a href="{{ url('ads_view', {'id': ad.idad}) }}" title="{{ 'View ad'|trans }}"
                                class="btn btn-primary">{{ 'View ad'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('ads_edit', {'id': ad.idad}) }}" title="{{ 'Edit ad'|trans }}"
                                class="btn btn-warning">{{ 'Edit ad'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('ads_delete', {'id': ad.idad}) }}" title="{{ 'Delete ad'|trans }}"
                           class="btn btn-danger">{{ 'Delete ad'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



        <div>
        {% if paginator.page > 1 %}
            {% set previous = (paginator.page - 1) %}
            <a href="{{ url('/ads/', {'page': previous}) }}" title="{{ 'previous page'|trans }}"
                    class="btn btn-info">{{ 'previous page'|trans }}</a>
        {%  endif %}

        {% if paginator.page < paginator.pagesCount %}
            {% set next = (paginator.page + 1) %}
            <a href="{{ url('/ads/', {'page': next}) }}" title="{{ 'next page'|trans }}"
               class="btn btn-info">{{ 'Next page'|trans }}</a>
        {% endif  %}
    </div>

    <p>
        <a href="{{ url('ads_add') }}" title="{{ 'Add ad'|trans }}"
           class="btn btn-success"> {{ 'Add ad'|trans }}
        </a>
    </p>



    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ 'Ads not found'|trans }}.
        </div>
    {% endif %}

{% for flashMessage in app.session.getFlashBag.get('message') %}
    <div class="alert alert-{{ flashMessage.type }}" role="alert">
        {{ flashMessage.content }}
    </div>

{% endfor %}
{% endblock %}
