{# Index action template for Ads controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Ads list'|trans }}{% endblock %}

{% block content %}
    <h1 class="text-center">
        {{ 'Ads list'|trans }}
    </h1>


    {%  if ads|length > 0 %}



        <table class="table table-condensed">
            <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Contence'|trans }}</th>
               {#<th>{{ 'Category'|trans }}</th>#}
                <th colspan="3">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for ad in ads %}
                <tr>
                    <td>{{ ad.idad|e }}</td>
                    <td>{{ ad.ad_name|e }}</td>
                    <td>{{ ad.ad_contence|e }}</td>
                    {#<td>{{ categories.name|e }}</td>#}
                    <td>
                        <a href="{{ url('ads_view', {'id': ad.idad}) }}" title="{{ 'View ad'|trans }}"
                                class="btn btn-primary">{{ 'View ad'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('ads_edit', {'id': ad.idad}) }}" title="{{ 'Edit ad'|trans }}"
                                class="btn btn-warning">{{ 'Edit ad'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('ads_delete', {'id': ad.idad}) }}" title="{{ 'Delete ad'|trans }}"
                           class="btn btn-danger">{{ 'Delete ad'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="row">
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="#" alt="#">
                    <div class="caption">
                        {% for ad in ads %}
                        <h3>{{ ad.ad_name|e }}</h3>
                        <p>{{ ad.ad_contence|e }}</p>
                        <p><a href="{{ url('ads_view', {'id': ad.idad}) }}" title="{{ 'View ad'|trans }}"
                              class="btn btn-primary" role="button">{{ 'View ad'|trans }}</a>
                            <a href="{{ url('ads_edit', {'id': ad.idad}) }}" title="{{ 'Edit ad'|trans }}"
                               class="btn btn-default" role="button">{{ 'Edit ad'|trans }}</a>
                             <br><br><a href="{{ url('ads_delete', {'id': ad.idad}) }}" title="{{ 'Delete ad'|trans }}"
                                class="btn btn-danger">{{ 'Delete ad'|trans }}</a></p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="#" alt="#">
                    <div class="caption">
                        {% for ad in ads %}
                            <h3>{{ ad.ad_name|e }}</h3>
                            <p>{{ ad.ad_contence|e }}</p>
                            <p><a href="{{ url('ads_view', {'id': ad.idad}) }}" title="{{ 'View ad'|trans }}"
                                  class="btn btn-primary" role="button">{{ 'View ad'|trans }}</a>
                                <a href="{{ url('ads_edit', {'id': ad.idad}) }}" title="{{ 'Edit ad'|trans }}"
                                   class="btn btn-default" role="button">{{ 'Edit ad'|trans }}</a>
                                <br><br><a href="{{ url('ads_delete', {'id': ad.idad}) }}" title="{{ 'Delete ad'|trans }}"
                                           class="btn btn-danger">{{ 'Delete ad'|trans }}</a></p>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="#" alt="#">
                    <div class="caption">
                        {% for ad in ads %}
                            <h3>{{ ad.ad_name|e }}</h3>
                            <p>{{ ad.ad_contence|e }}</p>
                            <p><a href="{{ url('ads_view', {'id': ad.idad}) }}" title="{{ 'View ad'|trans }}"
                                  class="btn btn-primary" role="button">{{ 'View ad'|trans }}</a>
                                <a href="{{ url('ads_edit', {'id': ad.idad}) }}" title="{{ 'Edit ad'|trans }}"
                                   class="btn btn-default" role="button">{{ 'Edit ad'|trans }}</a>
                                <br><br><a href="{{ url('ads_delete', {'id': ad.idad}) }}" title="{{ 'Delete ad'|trans }}"
                                           class="btn btn-danger">{{ 'Delete ad'|trans }}</a></p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>


            <nav>
                <ul class="pager">
                    {% if paginator.page > 1 %}
                    {% set previous = (paginator.page - 1) %}
                    <li class="previous"><a href="{{ url('/ads/', {'page': previous}) }}" title="{{ 'previous page'|trans }}">
                    <span aria-hidden="true">&larr;</span> Older</a></li>
                    {%  endif %}
                    {% if paginator.page < paginator.pagesCount %}
                    {% set next = (paginator.page + 1) %}
                    <li class="next"><a href={{ url('/ads/', {'page': next}) }}" title="{{ 'next page'|trans }}">
                    Newer <span aria-hidden="true">&rarr;</span></a></li>
                    {% endif  %}
                </ul>
            </nav>



    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ 'Ads not found'|trans }}.
        </div>
    {% endif %}

{% for flashMessage in app.session.getFlashBag.get('message') %}
    <div class="alert alert-{{ flashMessage.type }}" role="alert">
        {{ flashMessage.content }}
    </div>

{% endfor %}
{% endblock %}
