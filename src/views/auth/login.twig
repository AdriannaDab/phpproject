{% extends 'base.twig' %}

{% block title %}{{ 'Log in'|trans }}{% endblock %}

{% block content %}
<div class="col-md-3"></div>
<div class="col-md-3">
    <h1>
        {{ 'Log in'|trans }}
    </h1>
    <form action="{{ path('auth_login_check') }}" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.login) }}
        </div>
        <div class="form-group">
            {{ form_row(form.password) }}
        </div>
        <input type="submit"  name="submit" class="btn btn-primary" value="{{ 'Log in'|trans }}" />
        <a href="{{ url('/ads/') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
        {{ form_end(form) }}
    </form>
    {{ error }}
</div>
{% endblock %}

