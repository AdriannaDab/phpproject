{# Delete action template for Admins controller #}
{% extends 'base.twig' %}
{% block title %}{{  'Delete user'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h2 class="intro-text text-center">
        {{ 'Delete profile'|trans }}
    </h2>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>
            {{  'Do you really want to delete this profile'|trans }}?
        </h3>
        <form action="#" method="post">
            {{ form_widget(form) }}
            <input class="btn btn-danger" type="submit" name="submit" value="{{ 'Delete'|trans }}" />
            <a href="{{ url('admins_index') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>
        </form>
    </div>
{% endblock %}