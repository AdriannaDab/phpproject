<div class="container-fluid">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="{{ url('abouts_view') }}">{{ 'Project' |trans}}</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
            <li class="active"><a href="{{ url('/ads/') }}" title="{{ 'Advertising service'|trans }}">
                {{ 'Main advertisement site'|trans }} <span class="sr-only">(current)</span></a></li>
            <li>
                <a href="{{ url('ads_add') }}" title="{{ 'Add advertisement'|trans }}">
                    {{ 'Add advertisement'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ url('categories_index') }}" title="{{ 'Categories'|trans }}">
                    {{ 'Categories'|trans }}
                </a>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                   role="button" aria-haspopup="true" aria-expanded="false">
                   {{ 'Further information about'|trans }} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="{{ url('users_view') }}" title="{{ 'Your profile'|trans }}">{{ 'Your profile'|trans }}</a>
                    </li>
                    <li><a href="{{ url('users_show') }}" title="{{ 'Your ads'|trans }}">{{ 'Your ads'|trans }}</a>
                    </li>
                    <li role="separator" class="divider"></li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ url('users_index') }}" title="{{ 'Admin panel'|trans }}">
                        {{ 'Admin panel'|trans }}</a></li>
                    {% endif %}
                </ul>
            </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>{% if is_granted('IS_AUTHENTICATED_FULLY') == NULL %}
                    <a href="{{ url('users_register') }}" title="{{ 'Sign up'|trans }}">{{ 'Sign up'|trans }}</a>
                    {% endif %}
            </li>
            <li>{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ url('auth_logout') }}" title="{{ 'Logout'|trans }}">{{ 'Logout'|trans }}</a>

                {% else %}
                    <a href="{{ url('auth_login') }}" title="{{ 'Login'|trans }}">{{ 'Login'|trans }}</a>
                {% endif %}
            </li>
        </ul>
    </div>
</div>
