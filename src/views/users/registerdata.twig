{# Register data action template for Users controller #}
{% extends 'base.twig' %}
{% block title %}{{ 'Register'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h2 class="intro-text text-center">
        {{ 'Register'|trans }}
    </h2>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form role="form" action="" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.surname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.street) }}
        </div>
        <div class="form-group">
            {{ form_row(form.idcity) }}
        </div>
        <div class="form-group">
            {{ form_row(form.idprovince) }}
        </div>
        <div class="form-group">
            {{ form_row(form.idcountry) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Register'|trans }}" />


        {{ form_end(form) }}
    </form>
    <br>
    <a href="{{ url('users_newdata') }}"
       title="{{ 'There is no your city? Click here'|trans }}"
       >{{ 'There is no your city? Click here'|trans }}</a>
    </div>
{% endblock %}