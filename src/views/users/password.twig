{# Password action template for Users controller #}
{% extends 'base.twig' %}
{% block title %}{{ 'Change password'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h2 class="intro-text text-center">
        {{ 'Change password'|trans }}
    </h2>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form role="form" action="" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.password) }}
        </div>
        <div class="form-group">
            {{ form_row(form.confirm_password) }}
        </div>
        <div class="form-group">
            {{ form_row(form.new_password) }}
        </div>
        <div class="form-group">
            {{ form_row(form.confirm_new_password) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('users_view') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}

    </form>
    </div>
{% endblock %}