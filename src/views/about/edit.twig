{# Edit action template for Abouts controller #}
{% extends 'base.twig' %}
{% block title %}{{  'Edit'|trans }}{% endblock %}
{% block content %}
    <hr>
    <h1  class="intro-text text-center">
        {{ 'Edit'|trans }}
    </h1>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form role="form" action="{{ url ('abouts_edit')  }}" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.firstname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.surname) }}
        </div>
        <div class="form-group">
            {{ form_row(form.content) }}
        </div>
        <div class="form-group">
            {{ form_row(form.email) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('abouts_view') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}
    </form>
    </div>
{% endblock %}