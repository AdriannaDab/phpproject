{# View action template for Categories controller #}
{% extends 'base.twig' %}
{% block content %}
    {% if ads|length > 0 %}

            {% for ad in ads %}
                <div class="thumbnail">
                    <h2>
                        <h2 >
                            <a href="{{ url('ads_view', {'id': ad.idad|e}) }}" title="View ad">
                                {{ ad.ad_name|e }}
                            </a>
                        </h2>
                        <small>{{ ad.ad_date|e }}</small>
                        <hr>
                    </h2>
                    <p>{{ ad.ad_contence|slice(0,20) }}...</p>
                </div>
            {% endfor %}
            <a href="{{ url('categories_index') }}" class="btn btn-default">{{ 'Back'|trans }}</a>
        {% else %}
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h4 class="text-center">{{ 'Did not found any ads. Sorry.'|trans }}</h4><br>
                <p class="text-center">
                    <a href="{{ url('categories_index') }}" class="btn btn-lg btn-default">{{ 'Back'|trans }}</a></p>
</div>

    {% endif %}
{% endblock %}
