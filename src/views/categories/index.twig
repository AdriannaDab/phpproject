{# Index action template for Albums controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Categories list'|trans }}{% endblock %}

{% block content %}
    <h1>
        {{ 'Categories list'|trans }}
    </h1>
    <p>
        <a href="{{ url('categories_add') }}" title="{{ 'Add category'|trans }}">
            {{ 'Add category'|trans }}
        </a>
    </p>

    {%  if categories|length > 0 %}
        {#to odpowiada za przyciski#}
        <div>
            {% if paginator.page > 1 %}
                {% set previous = (paginator.page - 1) %}
                <a href="{{ url('categories_index', {'page': previous}) }}" title="{{ 'previous page'|trans }}">{{ 'previous page'|trans }}</a>
            {%  endif %}

            {% if paginator.page < paginator.pagesCount %}
                {% set next = (paginator.page + 1) %}
                <a href="{{ url('categories_index', {'page': next}) }}" title="{{ 'next page'|trans }}">{{ 'next page'|trans }}</a>
            {% endif  %}
        </div>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>{{ 'Id'|trans }}</th>
                <th>{{ 'Name'|trans }}</th>
                <th colspan="3">&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id|e }}</td>
                    <td>{{ category.name|e }}</td>
                    <td>
                        <a href="{{ url('categories_view', {'id': category.id}) }}" title="{{ 'View category'|trans }}">{{ 'View category'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('categories_edit', {'id': category.id}) }}" title="{{ 'Edit category'|trans }}">{{ 'Edit category'|trans }}</a>
                    </td>
                    <td>
                        <a href="{{ url('categories_delete', {'id': category.id}) }}" title="{{ 'Delete category'|trans }}">{{ 'Delete category'|trans }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ 'Categories not found'|trans }}.
        </div>
    {% endif %}
    {% for flashMessage in app.session.getFlashBag.get('message') %}
        <div class="alert alert-{{ flashMessage.type }}" role="alert">
            {{ flashMessage.content }}
        </div>
    {% endfor %}
{% endblock %}