{# Edit action template for Categories controller #}
{% extends 'base.twig' %}
{% block title %}{{  'Edit category'|trans }}{% endblock %}
{% block content %}
    <hr>

    <h1  class="intro-text text-center">
        {{ 'Edit category'|trans }}
    </h1>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form action="{{ url('categories_edit', {'id' :id}) }}" method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.category_name) }}
        </div>
        <div class="form-group">
            {{ form_row(form.iduser) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('categories_index') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}
    </form>
    </div>
{% endblock %}