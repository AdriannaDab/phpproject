{# Add action template for Albums controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Delete category'|trans }}{% endblock %}

{% block content %}
    <h1>
        {{ 'Delete category'|trans }}
    </h1>
    <p>  {{ 'Do you really want to delete this'|trans }}?</p>
    <form action="{{ url('categories_delete', {'id' : category.id}) }}" method="post">
        {{ form_widget(form) }}
        <input type="submit" name="submit" value="{{ 'Delete'|trans }}" />
    </form>
{% endblock %}