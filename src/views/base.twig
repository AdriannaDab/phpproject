<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link href="{{ app.request.basepath }}/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
        <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
        <script src="{{ app.request.basepath }}/assets/bootstrap/js/bootstrap.min.js"></script>

        <title>
            {% block title %}{{  'Advertising service'|trans }}{% endblock %}
        </title>
    {% endblock %}
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="box">
                <nav class="navbar navbar-inverse">

                        {% include 'main_menu.twig' %}

                </nav>
            <div>
                {% for flashMessage in app.session.getFlashBag.get('message') %}
                <div class="alert alert-{{ flashMessage.type }}">
                    {{ flashMessage.content }}
                </div>
                {% endfor %}
            </div>
                <div id="content">
                    {% block content %}{% endblock %}
                </div>

            </div>
        </div>
        <br><br><br>
        <footer class="footer panel-footer">
            {% include 'footer.twig' %}
        </footer>

    </div>
</body>
</html>