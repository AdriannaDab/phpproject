{# Upload action template for Photos controller #}
{% extends 'base.twig' %}

{% block content %}
    <hr>
    <h2 class="intro-text text-center">
       {{ 'Add photo'|trans }}
    </h2>
    <hr>
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <form role="form" action="{{ url('photos_upload', {'idad': idad|e}) }}" {{ form_enctype(form) }} method="post">
        {{ form_start(form)  }}
        <div class="form-group">
            {{ form_row(form.file) }}
        </div>
        <div class="form-group">
            {{ form_row(form.photo_alt) }}
        </div>
        <input type="submit" name="submit" class="btn btn-primary" value="{{ 'Save'|trans }}" />
        <a href="{{ url('/ads/') }}" class="btn btn-default">{{ 'Cancel'|trans }}</a>

        {{ form_end(form) }}

    </form>
    </div>
{% endblock %}