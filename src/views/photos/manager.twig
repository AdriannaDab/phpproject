{# Manager action template for Photos controller #}
{% extends 'base.twig' %}

{% block content %}
    <div class="row">
    {% for photo in photos %}
        <hr>
        <h2 class="intro-text text-center">
            {{ photo.photo_name|e }}
        </h2>
        <hr>
        <div class="col-lg-12 text-center">
            <p>
                <img class="img-responsive img-full" src="{{ app.request.basepath }}/media/{{ photo.photo_name }}">
               {#{% if is_granted('ROLE_ADMIN') %}#}
            </p>
            <a href="{{ url('photos_delete', {'photo_name': photo.photo_name|e}) }}"
                   title="{{ 'Delete Photo'|trans }}">
                <button type="button" class="btn btn-danger">{{ 'Delete Photo'|trans }}
                </button>
            </a></p>
        {#{% endif %}#}
            </p>
            <hr>
        </div>
    {% endfor %}
</div>
{% endblock %}